@model List<MyContacts.Models.Contact>
@{
    ViewData["Title"] = "Contact List";
}

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
        <h2 class="mb-3 mb-md-0">@ViewData["Title"]</h2>
        <a class="btn btn-success" asp-controller="Contact" asp-action="Add">
            <i class="bi bi-person-plus-fill me-1"></i> Add New Contact
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No contacts available. Click <strong>"Add New Contact"</strong> to get started.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Category</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contact in Model)
                    {
                        <tr class="table-row" style="cursor: pointer;"
                            onclick="window.location.href='@Url.Action("Edit", "Contact", new { id = contact.ContactId, slug = contact.Slug })'">
                            <td>@contact.FirstName</td>
                            <td>@contact.LastName</td>
                            <td>@contact.Email</td>
                            <td>@contact.PhoneNumber</td>
                            <td>@contact.Category?.Name ?? "—"</td>
                            <td class="text-center" onclick="event.stopPropagation();">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-info"
                                       asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a class="btn btn-outline-primary"
                                       asp-controller="Contact" asp-action="Edit" asp-route-id="@contact.ContactId" asp-route-slug="@contact.Slug">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a class="btn btn-outline-danger"
                                       asp-controller="Contact" asp-action="Delete" asp-route-id="@contact.ContactId">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
